<%- include('../partials/header') %>

<div class="ui small modal post-delete">
  <div class="dividing header">Delete Post?</div>

  <div class="actions">
    <form action="/blogs/<%= blog._id %>?_method=DELETE " method="post">
      <div class="ui cancel button">Cancel</div>
      <button type="submit" class="ui ok button">Confirm</button>

    </form>
  </div>
</div>



<div class="ui text container main-content" id="content">
  <div class="ui raised segment items">
    <h1 class="ui huge blue dividing center aligned header"><%= blog.title %> </h1>

    <img class="ui centered large image" src="<%= blog.image %> " alt="">
    <div class="meta">
      <span class="author"><%= blog.user %> -- </span>
      <span class="time"><%= blog.created.toDateString() %> </span>
    </div>
    <p class="item description">
      <%- nl2br(blog.body, false) %>
    </p>
    <div class="item">
      <div class="extra">
        <a href="/blogs/<%= blog._id %>/edit" class="ui left floated button"><i class="small pen icon"></i> Edit
          Post</a>
        <a class="ui right floated button post-delete-button"><i class="small trash icon"></i>Delete Post</a>
      </div>
    </div>

  </div>
  <div class="ui raised segment">
    <div class="ui comments">
      <h3 class="ui dividing header">Comments</h3>
      <% comments.forEach(comment => { %>
      <div class="comment">
        <!-- <a class="avatar">
              <img src="/images/avatar/small/matt.jpg">
            </a> -->
        <div class="content">
          <a class="author"><%= comment.author %> </a>
          <div class="metadata">
            <span class="date"><%= comment.created.toDateString() %> </span>
          </div>
          <div class="text">
            <%= comment.text %>
          </div>
          <div class="actions">
            <a class="reply">Reply</a>
            <a href="/blogs/<%= blog._id %>/comments/<%= comment._id %>/edit  " class="edit">Edit</a>
            <a class="delete comment-delete-button">Delete</a>
          </div>
        </div>
      </div>

      <div class="ui small modal comment-delete">
        <div class="dividing header">Delete Comment?</div>
      
        <div class="actions">
          <form action="/blogs/<%= blog._id %>/comments/<%= comment._id %>?_method=DELETE" method="post">
            <div class="ui cancel button">Cancel</div>
            <button type="submit" class="ui ok button">Confirm</button>
      
          </form>
        </div>
      </div>
      <% }) %>

      <a class="ui blue labeled submit icon button" href="/blogs/<%= blog._id %>/comments/new">
        <i class="icon edit"></i> Add Reply
      </a>
    </div>
  </div>
</div>
<script src="/scripts.js"></script>

<%- include('../partials/footer') %>