<%- include('partials/header') %> 

<div class="ui text container main-content" id="content">
  <h1 class="ui blue center aligned dividing header ">New Post</h1>
  
  <form action="/blogs" method="POST" class="ui large form">
    <div class="ui  segment">
      <div class="field">
        <div class="ui labeled input">
          <div class="ui label">
            Title:
          </div>
          <input type="text"  name="blog[title]">
        </div>
        
      </div>
      <div class="field">
        <div class="ui labeled input">
          <div class="ui label">
            Author:
          </div>
          <input type="text"  name="blog[user]">
        </div>
        
      </div>
      <div class="field">
        <div class="ui labeled input">
          <div class="ui label">
            Image:
          </div>
          <input type="text"  name="blog[image]">
        </div>
        
      </div>
      <div class="field">
        <div class="ui labeled input">
          <div class="ui label">
            Body:
          </div>
          <textarea name="blog[body]" id="body" rows="10"></textarea>
        </div>
        
      </div>

      <button class="ui blue button" type="submit">Submit</button>

    </div>
  </form>

</div>


<%- include('partials/footer') %> 

